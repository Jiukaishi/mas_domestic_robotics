<?xml version="1.0"?>
<launch>
    <arg name="robot_env" default="$(optenv ROBOT_ENV !!NO_ROBOT_ENV_SET!!)" />
    <include file="$(find mdr_rosplan_interface)/ros/launch/rosplan.launch">
        <arg name="data_path" value="$(find mdr_sciroc_door_open)/config/" />
        <arg name="domain_path" value="$(find mdr_rosplan_interface)/config/default_domain.pddl" />
        <arg name="problem_path" value="$(find mdr_sciroc_door_open)/config/problem.pddl" />
        <arg name="strl_file_path" value="$(find mdr_sciroc_door_open)/config/plan.strl" />
    </include>

    <!-- State machine -->
    <node pkg="mas_execution_manager" type="state_machine_creator" name="where_is_this" output="screen">
        <param name="sm_config_file" type="str" value="$(find mdr_sciroc_door_open)/config/open_door_sm.yaml" />
    </node>
</launch>
